---
layout: none
---
[
{% for post in site.posts %}
{
"title"    : "{{ post.title | escape }}",
"category" : "{{ post.categories | join: ', '  }}",
"tags"     : "{{ post.tags | join: ', ' }}",
"url"      : "{{ post.url }}",
"image"    : "{{ post.image }}",
"date"     : "{{ post.date }}"
} {% unless forloop.last %},{% endunless %}
{% endfor %}
,
{% for page in site.pages %}
{
{% if page.title != nil and page.category != nil %}
"title"    : "Page: {{ page.title | escape }}",
"category" : "{{ page.categories | join: ', '  }}",
"tags"     : "{{ page.tags | join: ', ' }}",
"url"      : "{{ page.url }}",
"image"    : "{{ page.image }}",
"date"     : "{{ page.date }}"
{% endif %}
} {% unless forloop.last %},{% endunless %}
{% endfor %}
]